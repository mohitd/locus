<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height"
    android:background="@drawable/listitem_background" >

    <com.centauri.locus.widget.CircularImageView
        android:id="@+id/location_imageview"
        android:layout_height="@dimen/circularimageview_diameter"
        android:layout_width="@dimen/circularimageview_diameter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginTop="@dimen/circularimageview_margin"
        android:layout_marginBottom="@dimen/circularimageview_margin"
        app:border="false" />
        
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Body1"
       	android:id="@+id/title_textview"
       	android:layout_height="wrap_content"
       	android:layout_width="wrap_content"
        android:layout_centerVertical="true"
       	android:gravity="center_vertical"
       	android:layout_marginLeft="@dimen/keyline_1"
        android:layout_toRightOf="@id/location_imageview"
        android:layout_toLeftOf="@+id/checkbox"
       	android:maxLines="1"
       	android:ellipsize="end" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/keyline_1"
        android:focusable="false"/>
        
</RelativeLayout>
